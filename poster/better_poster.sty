% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-2cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.19\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{40}{50} \selectfont
            \begin{center}
                 \nohyphens{#1}
            \end{center}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}

